@model ITAnket.Models.AdminLoginViewModel
@{
    ViewData["Title"] = "Yönetici Girişi";
}
<div class="row">
    <div class="col-md-5 mx-auto">
        <div class="card">
            <div class="card-body">
                <h5>Yönetici Girişi</h5>
                <form method="post">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label asp-for="KullaniciAdi" class="form-label">Kullanıcı Adı</label>
                        <input asp-for="KullaniciAdi" class="form-control" />
                        <span asp-validation-for="KullaniciAdi" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Parola" class="form-label">Parola</label>
                        <input asp-for="Parola" type="password" class="form-control" />
                        <span asp-validation-for="Parola" class="text-danger"></span>
                    </div>
                    <button class="btn btn-primary" type="submit">Giriş</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
