@{
    var title = ViewData["Title"] as string ?? "IT Memnuniyet Anketi";
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>@title</title>
    <meta name="description" content="IT Memnuniyet Anketi" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous" />

    @RenderSection("Styles", required: false)

    <style>
        /* Ufak iyileştirmeler */
        body { background-color: #f8f9fa; }
        .navbar-brand { font-weight: 600; }
        footer { color: #6c757d; }
    </style>
</head>
<body>
    <!-- Üst Navigasyon -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="/">IT Anket</a>

            <!-- İsteğe bağlı mobil menü (gerekirse açın)
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Anasayfa</a></li>
                </ul>
            </div>
            -->

            <div class="d-flex">
                <a class="btn btn-outline-light btn-sm" href="/Yonetim/Giris">Yönetim</a>
            </div>
        </div>
    </nav>

    <!-- İçerik -->
    <main class="container mb-5">
        @RenderBody()
    </main>

    <!-- Altbilgi -->
    <footer class="border-top py-3">
        <div class="container small">
            <div class="d-flex justify-content-between align-items-center">
                <span>© @DateTime.Now.Year IT Anket</span>
                <span class="text-muted">v1.0</span>
            </div>
        </div>
    </footer>

    <!-- JS: Bootstrap bundle (Popper dahil) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>

    <!-- Chart.js (genel; sayfalarda tekrar eklemeyin) -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"
            integrity="sha384-LdG0Zq1JvVf0kZq0eUq7dV0mZP3b5s1qv7w7J7rQ8iFv0mQ53fG/2dYl6a+f8j5k"
            crossorigin="anonymous"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
